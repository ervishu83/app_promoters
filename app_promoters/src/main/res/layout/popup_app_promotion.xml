<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="4dp"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/ivAppLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAppLogo"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#282828"
        android:textSize="20sp"
        tools:text="App Name" />

    <TextView
        android:id="@+id/tvAppDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppName"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="#606161"
        android:textSize="16sp"
        tools:text="App desc App desc App desc App desc App desc App desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppDesc"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:background="#a1a1a1"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/btnPromotion"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.5"
            android:text="Download"
            android:textColor="#fff"
            android:background="#a1a1a1"/>

    </LinearLayout>
</RelativeLayout>